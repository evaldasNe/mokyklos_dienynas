{% extends 'base.html.twig' %}

{% block title %}Pastabos{% endblock %}

{% block body %}


        <h1>Pastabos</h1>
        <div class="example-wrapper table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Mokytojo vardas</th>
                    <th scope="col">Mokytojo pavardė</th>
                    <th scope="col">El. paštas</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.name }}</td>
                        <td>{{ user.name}}</td>
                        <td>{{ user.email }}</td>
                    </tr>
                {% if users == 0 %}
                    <tr>
                        <td colspan="11">Nėra duomenų</td>
                    </tr>
                {% endif %}

                {% endfor %}
                </tbody>
            </table>
{% endblock %}