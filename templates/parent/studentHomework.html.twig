{% extends 'base.html.twig' %}

{% block title %}Namų darbai{% endblock %}

{% block body %}

        <h1>Namų darbai</h1>
        <div class="example-wrapper table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Mokinys</th>
                        <th scope="col">Uždavimo data</th>
                        <th scope="col">Dalykas</th>
                        <th scope="col">Mokytojas</th>
                        <th scope="col">Aprašymas</th>
                    </tr>
                </thead>     
                {% for user in users %}
                    {% for homeWork in homeWorks %}
                        <tbody>
                            <tr>
                                <td>{{ user.name }}</td>
                                <td>{{ homeWork.class }}</td>
                                <td>{{ homeWork.subject }}</td>
                                <td>{{ homeWork.teacher }}</td>
                                <td>Uždaviniai 1-8</td>
                             </tr>
                        </tbody>
                    {% endfor %}
                {% endfor %}
            </table>
{% endblock %}