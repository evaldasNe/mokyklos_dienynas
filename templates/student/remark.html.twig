{% extends 'base.html.twig' %}

{% block title %}Pastabos{% endblock %}

{% block body %}


        <h1>Pastabos</h1>
        <div class="example-wrapper table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Vardas</th>
                    <th scope="col">Pavardė</th>
                    <th scope="col">Dėstomas dalykas</th>
                    <th scope="col">Data</th>
                    <th scope="col">Pastaba</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>

                        <td>{{ user.name }}</td>
                        <td>{{ user.lastName }}</td>
                        <!-- <td>{{ user.city }}</td>-->
                        <!-- <td>{{ user.birthdate ? user.birthdate|date('Y-m-d') : '' }}</td> -->
                        <!-- <td>{{ user.city }}</td> -->
                        <td>{{ user.address }}</td>
                        <td>{{ user.postcode }}</td>
                    </tr>
                {% if users == 0 %}
                    <tr>
                        <td colspan="11">Nėra duomenų</td>
                    </tr>
                {% endif %}

                {% endfor %}
                </tbody>
            </table>
{% endblock %}